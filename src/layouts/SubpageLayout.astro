---
import BaseLayout from "./BaseLayout.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;

import "@src/styles/base.css";
---

<BaseLayout title={title}>
  <header>
    <div class="border-gray-200 border-b text-center py-2">
      <a href="/" class="font-medium text-lg hover:no-underline">
        <span class="text-flag-green"> انقلاب</span>
        <span class="text-flag-gold"> مَردُمی</span>
        <span class="text-flag-red"> ایران</span>
      </a>
    </div>
    <nav aria-label="Breadcrumb" class="breadcrumb px-4 mt-3 mb-1">
      <ul class="mx-auto max-w-screen-sm">
        <li><a href="/">خانه</a></li>
        <li class="text-primary">{title}</li>
      </ul>
    </nav>
  </header>
  <main class="pt-8 pb-4 px-2 lg:px-4">
    <slot />
  </main>
</BaseLayout>

<style>
  .breadcrumb ul {
    display: flex;
    flex-wrap: wrap;
    list-style: none;
  }

  .breadcrumb li:not(:last-child)::after {
    content: "";
    border: solid;
    border-color: var(--color-primary);
    border-width: max(1.5px, 0.09375em) 0 0 max(1.5px, 0.09375em);
    display: inline-block;
    width: 0.4375em;
    height: 0.4375em;
    transform: rotate(-45deg);
    margin: 0 0.4rem 0 0.65rem;
  }
</style>
